mixin head(pageName)
  meta(charset="utf-8")
  title #{pageName}#{pageName ? ' â€” ' : ''}#{locals.i18n.title}
  meta(name="description", content=locals.i18n.tagline)
  meta(name="viewport" content="width=device-width, initial-scale=1, minimal-ui")
  meta(name="mobile-web-app-capable" content="yes")
  meta(name="apple-mobile-web-app-capable" content="yes")
  meta(name="theme-color" content="#1d1919")
  meta(name="msapplication-navbutton-color" content="#1d1919")
  meta(name="apple-mobile-web-app-status-bar-style" content="#1d1919")
  meta(name="twitter:title", content=locals.i18n.title)
  meta(name="twitter:description", content=locals.i18n.tagline)
  meta(name="twitter:card", content=`http://...kickplate.../static/banner.jpg`)
  meta(name="twitter:image:alt", content=locals.i18n.title)
  meta(name="twitter:site", content=locals.i18n.twitterHandle)
  meta(name="og:site_name", content=locals.i18n.title)
  meta(name="og:title", content=locals.i18n.title)
  meta(name="og:description", content=locals.i18n.tagline)
  meta(property="og:image", content=`http://...kickplate.../static/banner.jpg`)
  meta(property="og:url", content=`http://...kickplate.../`)
  meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
  link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:200,300,400,700")
  if locals.isProduction
    link(rel="stylesheet" href="/dynamic/bundle.css")
  script document.getElementsByTagName('html')[0].setAttribute('class', 'js'); window.siteName = "#{locals.siteName}"
  script(src="/dynamic/bundle.js")
